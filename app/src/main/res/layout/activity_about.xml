<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ching.a5thingsaboutjimmy.About">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/jimmy_bg"/>
    <ImageView
        android:id="@+id/jimmy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/jimmy"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Jimmy"
        android:textSize="30sp"
        android:textColor="#90FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        />
    <TextView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Jimmy Liao is a Taiwanese illustrator as well as a picture book writer. The name Jimmy is his English first name which brought about his Chinese pen name, 幾米."
        android:textSize="13sp"
        android:textColor="#90FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:onClick="ActionAbout"
        android:src="@drawable/go"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="365dp"/>

</RelativeLayout>
